@page 
@model Book_StoreV10.CreateBookModel
@{
    ViewData["Title"] = "CreateBook";
}
<style>
h5 {
  text-align: center;
  color:blueviolet
}
</style>

<h5>The number of books is : @Model.Books.Count</h5>

<h6 style="color:blue"> Create a new book</h6>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Book.ISBN" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Book.ISBN" type="text" class="form-control">
            <span asp-validation-for="@Model.Book.ISBN" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Book.Title" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Book.Title" type="text" class="form-control">
            <span asp-validation-for="@Model.Book.Title" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Book.ImageName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Book.ImageName" type="text" class="form-control">
            <span asp-validation-for="@Model.Book.ImageName" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Book.Author" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Book.Author" type="text" class="form-control">
            <span asp-validation-for="@Model.Book.Author" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Book.Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Book.Price" type="text" class="form-control">
            <span asp-validation-for="@Model.Book.Price" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-light">
                Add Book
            </button>
        </div>
    </div>
</form>

