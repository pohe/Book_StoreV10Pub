@page
@model Book_StoreV10.AllBooksModel
@{
    ViewData["Title"] = "AllBooks";
}

<h1> AllBooks </h1>
<table class="table">
    <thead>
        <tr>
            <th>Title </th>
            <th>Author</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
    @if(Model.Books.Count!=0)
        {        
        @foreach (var item in Model.Books)
        {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.Price
            </td>
            <td>
                <img src="~/Books/@item.ImageName" width="80" height="70">
            </td>
            <td>
                <a asp-page="/Orders/ShoppingCart" asp-route-isbn="@item.ISBN"
                       class="btn btn-success btn-group-lg pull-right"  >
                        Add To Cart
                </a>
            </td>          
        </tr>
        }
        }
    </tbody>
</table>

